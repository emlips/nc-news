    },
    "exampleResponse": {
      "newComment": "new comment posted"
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "serves the updated article",
    "queries": [],
    "reqBodyFormat": { "inc_votes": "newVote" },
    "exampleResponse": {
      "article": {
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
