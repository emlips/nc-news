{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api",
    "queries": [],
    "reqBodyFormat": "object",
    "exampleResponse": {
      "endpoints": [{}]
    }
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "reqBodyFormat": "object",
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "reqBodyFormat": "object",
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an article object relating to the article_id",
    "queries": [],
    "reqBodyFormat": "object",
    "exampleResponse": {
      "article": {
        "article_id": 3,
        "title": "Eight pug gifs that remind me of mitch",
        "topic": "mitch",
        "author": "icellusedkars",
        "body": "some gifs",
        "created_at": "2020-11-03T09:12:00.000Z",
        "votes": 0,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments relating to the article_id",
    "queries": [],
    "reqBodyFormat": "object",
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 7,
          "body": "Lobster pot",
          "article_id": 1,
          "author": "icellusedkars",
          "votes": 0,
          "created_at": "2020-05-15T20:19:00.000Z"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "serves the body of the newly posted comment",
    "queries": [],
    "reqBodyFormat": {
      "username": "rogersop",
      "body": "new comment posted"
    },
    "exampleResponse": {
      "newComment": "new comment posted"
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "serves the updated article",
    "queries": [],
    "reqBodyFormat": { "inc_votes": "newVote" },
    "exampleResponse": {
      "article": {
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 110,
        "comment_count": 6
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes the specified comment",
    "queries": [],
    "reqBodyFormat": "object",
    "exampleResponse": null
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "reqBodyFormat": "object",
    "exampleResponse": {
      "users": [
        {
          "username": "butter_bridge",
          "name": "jonny",
          "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
        }
      ]
    }
  }
}
